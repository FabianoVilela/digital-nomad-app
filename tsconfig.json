{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/app/*": ["./app/*"],
      "@/assets/*": ["./assets/*"],
      "@/components/*": ["./src/components/*"],
      "@/data/*": ["./src/data/*"],
      "@/hooks": ["./src/hooks"],
      "@/providers/*": ["./src/providers/*"],
      "@/theme/*": ["./src/theme/*"],
      "@/types": ["./src/types"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
